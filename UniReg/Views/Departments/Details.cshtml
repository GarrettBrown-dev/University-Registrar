@{
    Layout = "_Layout";
}

@model UniReg.Models.Department

<h2>Department Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if (@Model.Courses.Count == 0)
{
    <p>This department does not contain any courses</p>
}
else
{
    <h4>Courses under this department:</h4>
    <ul>
        @foreach (var join in Model.Courses)
        {
            <li>@join.Course.Name</li>
        }
    </ul>
}

<p>@Html.ActionLink("Back to courses", "Index")</p>

<p>@Html.ActionLink("Add a course to this department.", "AddCourse")</p>

<p>@Html.ActionLink("Edit Course", "Edit", new { id = Model.DepartmentId })</p>

<p>@Html.ActionLink("Delete Course", "Delete", new { id = Model.DepartmentId })</p>